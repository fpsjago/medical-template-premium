---
const baseUrl = import.meta.env.BASE_URL;

const awards = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="8" r="7"></circle>
      <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
    </svg>`,
    title: "Best Medical Clinic 2025",
    issuer: "Healthcare Excellence Awards",
    year: "2025"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
      <polyline points="22 4 12 14.01 9 11.01"></polyline>
    </svg>`,
    title: "JCI Accredited",
    issuer: "Joint Commission International",
    year: "2024"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
    </svg>`,
    title: "Top Rated Provider",
    issuer: "HealthGrades",
    year: "5 Years Running"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>
    </svg>`,
    title: "Patient Choice Award",
    issuer: "National Medical Association",
    year: "2024"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
    </svg>`,
    title: "Value-Based Care Leader",
    issuer: "CMS Quality Program",
    year: "2024"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3.85 8.62a4 4 0 0 1 4.78-4.77 4 4 0 0 1 6.74 0 4 4 0 0 1 4.78 4.78 4 4 0 0 1 0 6.74 4 4 0 0 1-4.77 4.78 4 4 0 0 1-6.75 0 4 4 0 0 1-4.78-4.77 4 4 0 0 1 0-6.76Z"></path>
      <path d="m9 12 2 2 4-4"></path>
    </svg>`,
    title: "Safety Excellence",
    issuer: "Leapfrog Hospital Safety Grade",
    year: "A Rating"
  }
];

const stats = [
  { value: "15+", label: "Years Excellence", suffix: "" },
  { value: "5000", label: "Happy Patients", suffix: "+" },
  { value: "98", label: "Satisfaction Rate", suffix: "%" },
  { value: "24/7", label: "Emergency Care", suffix: "" }
];
---

<section class="trustSignals">
  <div class="container">
    <!-- Stats Bar -->
    <div class="statsBar" data-reveal>
      {stats.map((stat) => (
        <div class="statItem">
          <div class="statValue" data-count={stat.value}>
            {stat.value}{stat.suffix}
          </div>
          <div class="statLabel">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Awards Section -->
    <div class="awardsSection">
      <div class="awardsHeader" data-reveal>
        <h2>Recognized for Excellence</h2>
        <p>Our commitment to exceptional care has earned us industry-leading recognition</p>
      </div>

      <div class="awardsGrid" data-reveal-stagger>
        {awards.map((award) => (
          <article class="awardCard">
            <div class="awardIcon" set:html={award.icon}></div>
            <div class="awardContent">
              <h3>{award.title}</h3>
              <p class="awardIssuer">{award.issuer}</p>
              <span class="awardYear">{award.year}</span>
            </div>
            <div class="awardBadge">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- Insurance Partners -->
    <div class="insuranceSection" data-reveal>
      <h3>We Accept Most Major Insurance Plans</h3>
      <div class="insuranceLogos">
        <div class="insuranceLogo">Aetna</div>
        <div class="insuranceLogo">Blue Cross</div>
        <div class="insuranceLogo">Cigna</div>
        <div class="insuranceLogo">UnitedHealth</div>
        <div class="insuranceLogo">Humana</div>
        <div class="insuranceLogo">Medicare</div>
      </div>
      <a href={`${baseUrl}contact/`} class="insuranceLink">
        View all accepted insurance plans
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .trustSignals {
    padding: var(--space-16) 0;
    background: var(--bg);
  }

  /* Stats Bar */
  .statsBar {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-6);
    padding: var(--space-10) var(--space-8);
    background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
    border-radius: var(--radius-2xl);
    margin-bottom: var(--space-16);
    box-shadow: 0 16px 48px rgba(8, 145, 178, 0.2);
  }

  .statItem {
    text-align: center;
    padding: var(--space-4);
  }

  .statValue {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: white;
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .statLabel {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Awards Section */
  .awardsSection {
    margin-bottom: var(--space-16);
  }

  .awardsHeader {
    text-align: center;
    max-width: 640px;
    margin: 0 auto var(--space-12);
  }

  .awardsHeader h2 {
    margin-bottom: var(--space-4);
  }

  .awardsHeader p {
    font-size: var(--text-xl);
    color: var(--text-muted);
  }

  .awardsGrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-6);
  }

  .awardCard {
    position: relative;
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    padding: var(--space-6);
    background: white;
    border: 2px solid var(--border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all 0.4s var(--ease-out);
  }

  /* Subtle gradient overlay */
  .awardCard::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(8, 145, 178, 0.05) 0%, transparent 70%);
    transform: translate(50%, -50%);
    transition: transform 0.6s var(--ease-out);
  }

  .awardCard:hover::before {
    transform: translate(30%, -30%) scale(1.5);
  }

  .awardCard:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.05),
      0 10px 20px rgba(0, 0, 0, 0.08),
      0 20px 40px rgba(8, 145, 178, 0.1);
  }

  .awardIcon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(8, 145, 178, 0.1);
    border-radius: var(--radius-lg);
    color: var(--primary);
    flex-shrink: 0;
    position: relative;
    z-index: 1;
    transition: all 0.4s var(--ease-out);
  }

  .awardCard:hover .awardIcon {
    transform: scale(1.1) rotate(-5deg);
    background: rgba(8, 145, 178, 0.15);
  }

  .awardIcon :global(svg) {
    width: 28px;
    height: 28px;
    stroke-width: 2;
  }

  .awardContent {
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .awardContent h3 {
    font-size: var(--text-lg);
    margin-bottom: var(--space-2);
    color: var(--text);
  }

  .awardIssuer {
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-2);
  }

  .awardYear {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    background: rgba(249, 115, 22, 0.1);
    color: var(--accent);
    font-family: var(--font-heading);
    font-size: var(--text-xs);
    font-weight: 700;
    border-radius: var(--radius-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .awardBadge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(8, 145, 178, 0.05);
    border-radius: 50%;
    color: var(--primary);
    opacity: 0.3;
    transition: all 0.4s var(--ease-out);
  }

  .awardCard:hover .awardBadge {
    opacity: 1;
    transform: rotate(360deg) scale(1.1);
  }

  /* Insurance Section */
  .insuranceSection {
    text-align: center;
    padding: var(--space-12) var(--space-8);
    background: rgba(8, 145, 178, 0.03);
    border-radius: var(--radius-2xl);
    border: 1px solid var(--border);
  }

  .insuranceSection h3 {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-8);
    color: var(--text);
  }

  .insuranceLogos {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-8);
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }

  .insuranceLogo {
    padding: var(--space-4) var(--space-6);
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--text-muted);
    background: white;
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    transition: all 0.3s var(--ease-out);
    cursor: default;
  }

  .insuranceLogo:hover {
    color: var(--primary);
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(8, 145, 178, 0.15);
  }

  .insuranceLink {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--primary);
    transition: all 0.3s var(--ease-out);
  }

  .insuranceLink:hover {
    gap: var(--space-3);
    color: var(--accent);
  }

  .insuranceLink svg {
    transition: transform 0.3s var(--ease-out);
  }

  .insuranceLink:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .statsBar {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-4);
    }

    .awardsGrid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .trustSignals {
      padding: var(--space-12) 0;
    }

    .statsBar {
      grid-template-columns: 1fr;
      padding: var(--space-6);
      margin-bottom: var(--space-12);
    }

    .statValue {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .insuranceLogos {
      gap: var(--space-4);
    }

    .insuranceLogo {
      font-size: var(--text-sm);
      padding: var(--space-3) var(--space-4);
    }
  }
</style>
