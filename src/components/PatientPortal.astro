---
const baseUrl = import.meta.env.BASE_URL;

const portalFeatures = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="16" y1="2" x2="16" y2="6"></line>
      <line x1="8" y1="2" x2="8" y2="6"></line>
      <line x1="3" y1="10" x2="21" y2="10"></line>
    </svg>`,
    title: "Schedule Appointments",
    description: "Book, reschedule, or cancel appointments 24/7 in just a few clicks.",
    action: "Book Now",
    href: `${baseUrl}contact/`,
    color: "primary"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
      <polyline points="14 2 14 8 20 8"></polyline>
      <line x1="16" y1="13" x2="8" y2="13"></line>
      <line x1="16" y1="17" x2="8" y2="17"></line>
      <polyline points="10 9 9 9 8 9"></polyline>
    </svg>`,
    title: "View Medical Records",
    description: "Access your complete health history, test results, and treatment plans.",
    action: "View Records",
    href: "#",
    color: "accent"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"></circle>
      <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
      <line x1="12" y1="17" x2="12.01" y2="17"></line>
    </svg>`,
    title: "Request Prescriptions",
    description: "Refill medications and send prescriptions to your preferred pharmacy.",
    action: "Request Refill",
    href: "#",
    color: "primary"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
      <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
    </svg>`,
    title: "Pay Bills Online",
    description: "View statements, make payments, and set up auto-pay securely.",
    action: "Pay Now",
    href: "#",
    color: "accent"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>`,
    title: "Message Your Doctor",
    description: "Secure messaging with your care team for non-urgent questions.",
    action: "Send Message",
    href: "#",
    color: "primary"
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
      <line x1="8" y1="21" x2="16" y2="21"></line>
      <line x1="12" y1="17" x2="12" y2="21"></line>
    </svg>`,
    title: "Virtual Visits",
    description: "Connect with your doctor via video call from the comfort of home.",
    action: "Start Visit",
    href: "#",
    color: "accent"
  }
];
---

<section class="patientPortal">
  <div class="container">
    <div class="portalHeader" data-reveal>
      <div class="headerContent">
        <div class="badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
            <path d="M2 17l10 5 10-5"></path>
            <path d="M2 12l10 5 10-5"></path>
          </svg>
          <span>Patient Portal</span>
        </div>
        <h2>Healthcare at Your Fingertips</h2>
        <p class="lead">
          Manage your healthcare journey with our secure, easy-to-use patient portal. Access records, communicate with your care team, and schedule appointments anytime, anywhere.
        </p>
        <div class="headerActions">
          <a href="#" class="ctaButton primary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
              <polyline points="10 17 15 12 10 7"></polyline>
              <line x1="15" y1="12" x2="3" y2="12"></line>
            </svg>
            Sign In to Portal
          </a>
          <a href="#" class="ctaButton secondary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="8.5" cy="7" r="4"></circle>
              <line x1="20" y1="8" x2="20" y2="14"></line>
              <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
            Create Account
          </a>
        </div>
      </div>
      <div class="headerVisual">
        <div class="portalPreview">
          <div class="previewWindow">
            <div class="windowHeader">
              <div class="windowDots">
                <span></span>
                <span></span>
                <span></span>
              </div>
              <div class="windowTitle">Patient Portal Dashboard</div>
            </div>
            <div class="windowContent">
              <div class="dashboardStat">
                <div class="statIcon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                  </svg>
                </div>
                <div class="statInfo">
                  <div class="statLabel">Next Appointment</div>
                  <div class="statValue">Tomorrow, 2:30 PM</div>
                </div>
              </div>
              <div class="dashboardStat">
                <div class="statIcon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="4" y="4" width="16" height="16" rx="8"></rect>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </div>
                <div class="statInfo">
                  <div class="statLabel">Prescriptions</div>
                  <div class="statValue">2 Ready for Pickup</div>
                </div>
              </div>
              <div class="dashboardStat">
                <div class="statIcon">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 5H7a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-2"></path>
                    <rect x="9" y="3" width="6" height="4" rx="2"></rect>
                    <line x1="9" y1="12" x2="15" y2="12"></line>
                    <line x1="9" y1="16" x2="15" y2="16"></line>
                  </svg>
                </div>
                <div class="statInfo">
                  <div class="statLabel">Test Results</div>
                  <div class="statValue">1 New Result</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Portal Features Grid -->
    <div class="featuresGrid" data-reveal-stagger>
      {portalFeatures.map((feature) => (
        <article class={`featureCard ${feature.color}`}>
          <div class="featureIcon" set:html={feature.icon}></div>
          <div class="featureContent">
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
          <a href={feature.href} class="featureAction">
            {feature.action}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .patientPortal {
    padding: var(--space-16) 0;
    background: linear-gradient(180deg, #f0f9ff 0%, var(--bg) 100%);
  }

  /* Portal Header */
  .portalHeader {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
    margin-bottom: var(--space-16);
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: white;
    border: 1px solid rgba(8, 145, 178, 0.2);
    border-radius: var(--radius-full);
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--primary);
    margin-bottom: var(--space-6);
  }

  .badge svg {
    width: 16px;
    height: 16px;
  }

  .headerContent h2 {
    font-size: clamp(36px, 5vw, 56px);
    line-height: 1.1;
    margin-bottom: var(--space-5);
  }

  .lead {
    font-size: var(--text-xl);
    line-height: 1.7;
    margin-bottom: var(--space-8);
    max-width: 540px;
    color: var(--text-muted);
  }

  .headerActions {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .ctaButton {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-6);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: 700;
    border-radius: var(--radius-lg);
    transition: all 0.3s var(--ease-out);
  }

  .ctaButton.primary {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 16px rgba(8, 145, 178, 0.3);
  }

  .ctaButton.primary:hover {
    background: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(249, 115, 22, 0.4);
  }

  .ctaButton.secondary {
    background: white;
    color: var(--primary);
    border: 2px solid var(--primary);
  }

  .ctaButton.secondary:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(8, 145, 178, 0.2);
  }

  /* Portal Preview */
  .portalPreview {
    position: relative;
    padding: var(--space-6);
  }

  .previewWindow {
    background: white;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.05),
      0 10px 20px rgba(0, 0, 0, 0.08),
      0 20px 40px rgba(8, 145, 178, 0.1);
    border: 1px solid var(--border);
  }

  .windowHeader {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background: rgba(8, 145, 178, 0.05);
    border-bottom: 1px solid var(--border);
  }

  .windowDots {
    display: flex;
    gap: var(--space-2);
  }

  .windowDots span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--border);
  }

  .windowDots span:nth-child(1) { background: #ff5f56; }
  .windowDots span:nth-child(2) { background: #ffbd2e; }
  .windowDots span:nth-child(3) { background: #27c93f; }

  .windowTitle {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--text-muted);
  }

  .windowContent {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .dashboardStat {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background: rgba(8, 145, 178, 0.05);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(8, 145, 178, 0.1);
  }

  .statIcon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    border-radius: var(--radius-md);
  }

  .statIcon svg {
    width: 28px;
    height: 28px;
    color: var(--primary);
    stroke-width: 2;
  }

  .statInfo {
    flex: 1;
  }

  .statLabel {
    font-family: var(--font-heading);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: var(--space-1);
  }

  .statValue {
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--text);
  }

  /* Features Grid */
  .featuresGrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-6);
  }

  .featureCard {
    padding: var(--space-6);
    background: white;
    border: 2px solid var(--border);
    border-radius: var(--radius-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    transition: all 0.4s var(--ease-out);
    position: relative;
    overflow: hidden;
  }

  .featureCard::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(8, 145, 178, 0.03) 0%, rgba(249, 115, 22, 0.03) 100%);
    opacity: 0;
    transition: opacity 0.4s var(--ease-out);
  }

  .featureCard:hover::before {
    opacity: 1;
  }

  .featureCard:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.05),
      0 10px 20px rgba(0, 0, 0, 0.08),
      0 20px 40px rgba(8, 145, 178, 0.12);
  }

  .featureIcon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(8, 145, 178, 0.1);
    border-radius: var(--radius-lg);
    color: var(--primary);
    position: relative;
    z-index: 1;
    transition: all 0.4s var(--ease-out);
  }

  .featureCard.accent .featureIcon {
    background: rgba(249, 115, 22, 0.1);
    color: var(--accent);
  }

  .featureCard:hover .featureIcon {
    transform: scale(1.1) rotate(5deg);
  }

  .featureIcon :global(svg) {
    width: 32px;
    height: 32px;
    stroke-width: 2;
  }

  .featureContent {
    flex: 1;
    position: relative;
    z-index: 1;
  }

  .featureContent h3 {
    font-size: var(--text-2xl);
    margin-bottom: var(--space-3);
  }

  .featureContent p {
    font-size: var(--text-base);
    line-height: 1.6;
    color: var(--text-muted);
  }

  .featureAction {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--primary);
    position: relative;
    z-index: 1;
    transition: all 0.3s var(--ease-out);
  }

  .featureCard.accent .featureAction {
    color: var(--accent);
  }

  .featureAction:hover {
    gap: var(--space-3);
    transform: translateX(4px);
  }

  .featureAction svg {
    transition: transform 0.3s var(--ease-out);
  }

  .featureAction:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .portalHeader {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .headerVisual {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .patientPortal {
      padding: var(--space-12) 0;
    }

    .headerActions {
      flex-direction: column;
    }

    .ctaButton {
      justify-content: center;
      width: 100%;
    }

    .featuresGrid {
      grid-template-columns: 1fr;
    }
  }
</style>
