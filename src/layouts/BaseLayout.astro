---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Professional medical care with compassion and expertise. Your health is our priority."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <ViewTransitions />

    <!-- Fast View Transitions -->
    <style is:global>
      @view-transition {
        navigation: auto;
      }

      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.2s;
      }
    </style>

    <!-- Google Fonts: Plus Jakarta Sans + Source Serif 4 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&family=Source+Serif+4:ital,opsz,wght@0,8..60,300;0,8..60,400;0,8..60,600;0,8..60,700;1,8..60,400&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />

    <!-- Lenis Smooth Scroll + GSAP ScrollTrigger -->
    <script>
      import Lenis from 'lenis';
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';

      gsap.registerPlugin(ScrollTrigger);

      let lenis: Lenis | null = null;
      let rafId: number | null = null;

      function initPremiumScrolling() {
        // Clean up previous Lenis instance only
        if (lenis) {
          lenis.destroy();
          lenis = null;
        }

        if (rafId !== null) {
          gsap.ticker.remove(rafId as any);
          rafId = null;
        }

        // Initialize Lenis smooth scroll (heavier feel with more momentum)
        lenis = new Lenis({
          duration: 1.0,  // Increased from 0.6 for more momentum
          easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
          orientation: 'vertical',
          smoothWheel: true,
          wheelMultiplier: 1.8,  // Increased from 1 - scroll more per wheel tick
          smoothTouch: false,
          touchMultiplier: 2,
        });

        // Connect Lenis to GSAP ScrollTrigger
        lenis.on('scroll', ScrollTrigger.update);

        const ticker = (time: number) => {
          lenis?.raf(time * 1000);
        };

        gsap.ticker.add(ticker);
        gsap.ticker.lagSmoothing(0);

        rafId = ticker as any;
      }

      // Cleanup before page transitions
      document.addEventListener('astro:before-preparation', () => {
        if (lenis) {
          lenis.destroy();
          lenis = null;
        }
        gsap.killTweensOf('*');
        ScrollTrigger.getAll().forEach(trigger => trigger.kill());
      });

      // Initialize on load
      document.addEventListener('DOMContentLoaded', initPremiumScrolling);
      document.addEventListener('astro:page-load', initPremiumScrolling);
    </script>

    <!-- Scroll Reveal Script — Repeating Animations -->
    <script is:inline data-astro-rerun>
      (function() {
        // Disconnect previous observer if exists
        if (window.scrollRevealObserver) {
          window.scrollRevealObserver.disconnect();
        }

        window.scrollRevealObserver = new IntersectionObserver(
          function(entries) {
            entries.forEach(function(entry) {
              if (entry.isIntersecting) {
                entry.target.classList.add('visible');
              } else {
                entry.target.classList.remove('visible');
              }
            });
          },
          {
            threshold: 0.15,
            rootMargin: '0px 0px -100px 0px'
          }
        );

        document.querySelectorAll('[data-reveal], [data-reveal-stagger]').forEach(function(el) {
          window.scrollRevealObserver.observe(el);
        });
      })();
    </script>

    <!-- 3D Card Hover Effect -->
    <script is:inline data-astro-rerun>
      (function() {
        // Cleanup previous instance
        if (window._3dCardsAbort) window._3dCardsAbort.abort();
        window._3dCardsAbort = new AbortController();
        var signal = window._3dCardsAbort.signal;

        // Target specific content cards — NOT statCard, actionCard, etc.
        var cards = document.querySelectorAll('.postCard, .teamCard, .serviceCard, .doctorCard, [data-tilt]');

        cards.forEach(function(card) {
          card.style.transformStyle = 'preserve-3d';
          card.style.willChange = 'transform';

          card.addEventListener('mousemove', function(e) {
            var rect = card.getBoundingClientRect();
            var centerX = rect.left + rect.width / 2;
            var centerY = rect.top + rect.height / 2;
            var mouseX = e.clientX - centerX;
            var mouseY = e.clientY - centerY;

            // Rotation angles (max ±12deg — subtle premium feel)
            var rotateX = (mouseY / rect.height) * -12;
            var rotateY = (mouseX / rect.width) * 12;

            card.style.transition = 'transform 0.1s ease-out';
            card.style.transform = 'perspective(800px) rotateX(' + rotateX + 'deg) rotateY(' + rotateY + 'deg) scale3d(1.02, 1.02, 1.02)';
          }, { signal: signal });

          card.addEventListener('mouseleave', function() {
            card.style.transition = 'transform 0.4s cubic-bezier(0.16, 1, 0.3, 1)';
            card.style.transform = 'perspective(800px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)';
          }, { signal: signal });
        });
      })();
    </script>
  </body>
</html>
